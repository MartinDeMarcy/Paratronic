{% extends "DoplusParatronicBundle::layout.html.twig" %}

{% block title %} Accueil |{{ parent() }} {% endblock %}
{% block content %}
    <div id="user-infos">
            <h1>Param√®tre limitation</h1>
            {{ form_start(formLimitation, {'id': "form-limitation-action", 'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(formLimitation) }}
            <div id="user-infos-form" class="col2-3">

                            <div class="colx2">
                                    <div class="margin">
                                        {{ form_errors(formLimitation.nbStations) }}
                                        {{ form_label(formLimitation.nbStations, "Nombre de station") }}
                                        {{ form_widget(formLimitation.nbStations, {'id': 'nbStations'}) }}
                                    </div>
                            </div>

                            <div class="colx2">
                                    <div class="margin">
                                        {{ form_errors(formLimitation.nbUtilisateurs) }}
