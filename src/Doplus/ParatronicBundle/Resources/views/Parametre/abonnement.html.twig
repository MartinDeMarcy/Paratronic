{% extends "DoplusParatronicBundle::layout.html.twig" %}

{% block title %} Gestion Abonnements |{{ parent() }} {% endblock %}
{% block content %}
    <div id="user-infos">
            <h1>Paramètre de l'abonnement</h1>
            {{ form_start(formAbonnement, {'id': "form-abonnement-action", 'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(formAbonnement) }}
            <div id="user-infos-form" class="col2-3">

                            <div class="colx2">
                                    <div class="margin">
                                        {{ form_errors(formAbonnement.dateDebut) }}
                                        {{ form_label(formAbonnement.dateDebut, "Date de début") }}
                                        {{ form_widget(formAbonnement.dateDebut, {'id': 'dateDebut'}) }}
                                    </div>
                            </div>

                            <div class="colx2">
                                    <div class="margin">
                                        {{ form_errors(formAbonnement.dateFin) }}
                                        {{ form_label(formAbonnement.dateFin, "Date de fin") }}
                                        {{ form_widget(formAbonnement.dateFin, {'id': 'dateFin'}) }}
                                    </div>
                            </div>

                            <div class="clear"></div>
                            <div class="colx2">
                                    <div class="margin">
                                            {{ form_errors(formAbonnement.etat) }}
                                            {{ form_label(formAbonnement.etat, "Etat") }}
                                            <div class="checkbox">
                                                En cours{{ form_widget(formAbonnement.etat, {'id': 'etat', 'attr': {'class': 'checkbox-inline'}}) }}
                                            </div>
                                            <div class="clear"></div>
                                    </div>
                            </div>
                            <div class="clear"></div>

                            <p>
                                <input type="hidden" name="client_id" value="3" />
                                <input type="hidden" name="id" value="" />
                            </p>
                            <div class="clear"></div>
                    </div>
            <div class="clear"></div>

                    <div class="clear"></div>
                    <div id="user-edit-form">
                                    <div class="colx2">
                                            <div class="colx3">
                                                    <div class="margin">
                                                        <input type="button" value="Annuler" onclick="window.location.href='{{ path('doplus_paratronic_parametre_menu', {'id': id}) }}';">
                                                    </div>
                                            </div>
                                            <div class="colx3">
                                                    <div class="margin">
                                                            <input type="submit" name="valider_abonnement" value="Valider">
                                                    </div>
                                            </div>
                                    </div>
                                    <div class="clear"></div>

                    </div>	

    </div>
{{ form_end(formAbonnement) }}
{% endblock %}